@model WebShop.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    /// @Jonas EIN, resale taxid, and description box, these all need added to the box to allow
    ///     for the account to be added to the website. Email to contact@pinnacledistro.com
    /// @Jonas Also need to work on emailing users based on what they have ordered/if there accounts
    ///     have been verified through our program. 
}
<body style="background: white">

</body>

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create an account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="payContainer">
        <form method="post" action="@Url.Action("AcceptPayment", "Checkout")">

            <div class="row">
            <link rel="stylesheet" href="~/Content/register.css">
                <div class="col-50">
                    <div class="row">
                        <div class="col-50">
                            <label required="required" for="title"><i class="fa fa-user"></i> Title</label>
                            <div class="col-md-10">
                                @Html.EnumDropDownListFor(m => m.Title, "Select one", new { @class = "form-control", style = "width: 220px;" })
                                @Html.ValidationMessageFor(m => m.Title)
                            </div>
                        </div>
                        <div class="col-50">
                            <br />
                        </div>
                        <div class="col-50">
                            <label required="required" for="title"><i class="fa fa-user"></i> First Name</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "John", style = "width: 220px;" })
                                @Html.ValidationMessageFor(m => m.FirstName)
                            </div>
                        </div>
                        <div class="col-50">
                            <label required="required" for="title"><i class="fa fa-user"></i> Last Name</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Doe", style = "width: 220px;" })
                                @Html.ValidationMessageFor(m => m.LastName)
                            </div>
                        </div>
                        <div class="col-50">
                            <label required="required" for="adr"><i class="fa fa-address-card-o"></i> Address</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "123 Bobby Ave.", style = "width: 220px;" })
                                @Html.ValidationMessageFor(m => m.Address)
                            </div>
                        </div>
                        <div class="col-50">
                            <label required="required" for="adr"><i class="fa fa-address-card-o"></i> City</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "NY", style = "width: 220px;" })
                                @Html.ValidationMessageFor(m => m.City)
                            </div>
                        </div>
                        <div class="col-50">
                            <label required="required" for="adr"><i class="fa fa-address-card-o"></i> State</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.State, new { @class = "form-control", placeholder = "NY", style = "width: 220px;" })
                                @Html.ValidationMessageFor(m => m.State)
                            </div>
                        </div>
                        <div class="col-50">
                            <label required="required" for="adr"><i class="fa fa-address-card-o"></i> Country</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Country, new { @class = "form-control", placeholder = "US", style = "width: 220px;" })
                                @Html.ValidationMessageFor(m => m.Country)
                            </div>
                        </div>
                        <div class="col-50">
                            <label required="required" for="adr"><i class="fa fa-address-card-o"></i> Zip</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Zip, new { @class = "form-control", placeholder = "#####", style = "width: 220px;" })
                                @Html.ValidationMessageFor(m => m.Zip)
                            </div>
                        </div>
                        <div class="col-50">

                        </div>
                        <div class="col-50">
                            <label required="required" for="email"><i class="fa fa-envelope"></i> Email</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "john@gmail.com", style = "width: 220px;" })
                            </div>
                        </div>
                        <div class="col-50">
                        </div>
                        <div class="col-50">
                            <label required="required" for="email"><i class="fa fa-lock"></i> Password</label>
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "width: 220px;" })
                            </div>
                        </div>
                        <div class="col-50">
                            <label required="required" for="email"><i class="fa fa-lock"></i> Confirm Password</label>
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", style = "width: 220px;" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-50">
                    <div class="row">
                        <div class="col-50">
                            <br />
                        </div>
                        <div class="col-50">
                            <br />
                        </div>
                        <div class="col-50">
                            <br />
                        </div>
                        <div class="col-50">
                            <br />
                        </div>
                        <div class="col-50">
                            <br />
                        </div>
                        <div class="col-50">
                            <br />
                        </div>
                        <div class="col-50">
                            <label for="Company"><i class="fa fa-building" ></i>Company</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Company, new { @class = "form-control", placeholder = "Pinnacle Distro", style = "width: 220px;" })
                            </div>
                        </div>
                        <div class="col-50">
                            <label for="Website"><i class="fa fa-building-o"></i>Website</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Website, new { @class = "form-control", placeholder = "pinnacledistro.com", style = "width: 220px;" })
                            </div>
                        </div>
                        <div class="col-50">
                            <label required="required" for="EIN" ><i class="fa"></i>EIN Number</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.EIN, new { @class = "form-control", placeholder = "##-#######", style = "width: 220px;" })
                            </div>
                        </div>
                        <div class="col-50">
                            <label required="required" for="Phone"><i class="fa fa-phone" placeholder="###-###-####"></i>Phone</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "###-##-####", style = "width: 220px;" })
                            </div>
                        </div>
                        <div class="col-50">
                            <br />
                        </div>
                        <div class="col-50">
                            <br />
                        </div>
                        <div class="col-75">
                            <label for="compNotes">Description</label>
                            <textarea name="compNotes" style="margin-left:20px;" type="text" 
                                      placeholder="Brief description about yourself." cols="50" rows="5"> </textarea>
                        </div>
                    </div>
                    <div class="col-50 pull-right">
                        <input type="submit" class="btn btn-default" value="Register" />
                    </div>
                </div>
            </div>
        </form>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
